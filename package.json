{
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/preset-env": "^7.16.0",
    "@hotwired/stimulus": "^3.0.0",
    "@symfony/stimulus-bridge": "^3.2.0",
    "@symfony/webpack-encore": "^4.0.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "autoprefixer": "^10.3.3",
    "concurrently": "^6.2.1",
    "core-js": "^3.23.0",
    "tailwindcss": "^3.0.8",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "lozad": "^1.14.0"
  },
  "scripts": {
    "dev": "concurrently --kill-others \"yarn run tailwind:watch\" \"encore dev --watch\"",
    "build": "yarn run tailwind:build && NODE_ENV=production encore production",
    "tailwind:build": "tailwindcss -i assets/css/tailwind.src.css -o assets/css/tailwind.css",
    "tailwind:watch": "tailwindcss -i assets/css/tailwind.src.css -o assets/css/tailwind.css --watch"
  }
}
