{
    "semi": false,
    "printWidth": 120,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "twigAlwaysBreakObjects": false,
    "overrides": [
        {
            "files": ["*.yaml", "*.yml", "composer.*", "*.json"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ["*.twig"],
            "options": {
                "printWidth": 160
            }
        }
    ],
    "plugins": ["@zackad/prettier-plugin-twig", "prettier-plugin-tailwindcss"]
}
