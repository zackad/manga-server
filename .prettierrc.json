{
    "semi": false,
    "printWidth": 120,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "twigPrintWidth": 160,
    "twigAlwaysBreakObjects": false,
    "overrides": [
        {
            "files": ["*.yaml", "*.yml", "composer.*", "*.json"],
            "options": {
                "tabWidth": 4
            }
        }
    ],
    "plugins": ["prettier-plugin-twig-melody", "prettier-plugin-tailwindcss"],
    "pluginSearchDirs": []
}
