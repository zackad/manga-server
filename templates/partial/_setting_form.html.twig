<div class="hidden fixed top-0 left-0 z-10 w-full overflow-y-auto" {{ stimulus_target('setting', 'modalContainer') }}>
  <div class="mx-auto mt-12 max-w-xl bg-gray-800">
    <div class="p-4 border border-white rounded-lg">
      <h1 class="text-lg font-semibold">
        Settings
      </h1>
      <form class="mt-3" {{ stimulus_target('setting', 'form') }}>
        <div class="flex flex-col">
          <label for="max-image-width">
            Maximum image width <span class="text-sm text-gray-500">(leave blank to default 100%)</span>
          </label>
          <input type="number"
            name="max-image-width"
            id="max-image-width"
            class="block w-full bg-primary text-gray-900 border py-1 px-2"
            placeholder="Value in pixel"
            {{ stimulus_target('setting', 'inputWidth') }} />
        </div>
        <div class="mt-4">
          <button type="submit" class="px-2 py-1 border rounded hover:bg-gray-600">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
